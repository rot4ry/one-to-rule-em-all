@*viewmodel?*@
@model oneWeb.Models.HotelModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex; justify-content: center; padding: 10% 0 1% 0">
  <div style="display: flex;">
    <h1>@ViewData["Title"]</h1>
    <h1 style="color:forestgreen">&nbsp;@Model.Name?</h1>
  </div>
</div>

<div style="display: flex; width: 100%; height: 60%; justify-content: center; align-items: center;">
    <form asp-controller="Hotel" asp-action="Delete" style="width: 100%">
      <a class="btn btn-success text-dark" style="width: 60%; margin: 2%;"
        asp-controller="Hotel" asp-action="Details" asp-route-id="@Model.Id"
      >No!</a>

      <input type="hidden" asp-for="Id"/>
      <input type="submit" value="Yes, delete this hotel." class="btn btn-danger" style="width: 20%; margin: 2%;"/>
    </form>
</div>
